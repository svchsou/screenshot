APP_NAME="Shots"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://shots.example.com

LOG_CHANNEL=stack
LOG_LEVEL=info

# MySQL
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=cpaneluser_shots
DB_USERNAME=cpaneluser_user
DB_PASSWORD=change-me

SESSION_DRIVER=file
SESSION_LIFETIME=120

UPLOAD_MAX_MB=12
ALLOWED_MIMES=image/png,image/jpeg,image/webp

# Ads (optional)
ADS_ENABLED=false
ADSENSE_CLIENT_ID=
ADSENSE_SLOT_LEFT=
ADSENSE_SLOT_RIGHT=
ADSENSE_SLOT_BOTTOM=
ADSENSE_TEST_MODE=true

# Default upload disk (public, local, s3, spaces, ftp)
DEFAULT_UPLOAD_DISK=public

# S3/Spaces (optional)
S3_KEY=
S3_SECRET=
S3_REGION=
S3_BUCKET=
S3_URL=
S3_ENDPOINT=
S3_USE_PATH_STYLE=false

# FTP (optional)
FTP_HOST=
FTP_USERNAME=
FTP_PASSWORD=
FTP_ROOT=/public_html/uploads
FTP_PORT=21
FTP_SSL=false
FTP_PASSIVE=true
FTP_TIMEOUT=30

# Optional CDN
CDN_BASE_URL=

# Admin login
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-temp-password
ADMIN_PASSWORD_HASH=

# Rate limits
RATE_UPLOADS_PER_MIN=5
RATE_VIEWS_PER_MIN=120
ADMIN_LOGIN_MAX_ATTEMPTS=5
ADMIN_LOGIN_DECAY_SECONDS=60

