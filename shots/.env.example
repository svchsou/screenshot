APP_NAME="Shots"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Use SQLite for quick start
DB_CONNECTION=sqlite
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Upload limits
UPLOAD_MAX_MB=12
ALLOWED_MIMES=image/png,image/jpeg,image/webp

# Optional ad settings
ADS_ENABLED=false
ADSENSE_CLIENT_ID=
ADSENSE_SLOT_LEFT=
ADSENSE_SLOT_RIGHT=
ADSENSE_SLOT_BOTTOM=
ADSENSE_TEST_MODE=false

# Default upload disk (public, local, s3, spaces, ftp)
DEFAULT_UPLOAD_DISK=public

# Optional CDN
CDN_BASE_URL=

# Admin token for storage UI in production
ADMIN_STORAGE_TOKEN=
ADMIN_USERNAME=admin
ADMIN_PASSWORD=
ADMIN_PASSWORD_HASH=

# Rate limits
RATE_UPLOADS_PER_MIN=5
RATE_VIEWS_PER_MIN=120
ADMIN_LOGIN_MAX_ATTEMPTS=5
ADMIN_LOGIN_DECAY_SECONDS=60
